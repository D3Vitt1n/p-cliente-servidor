<!-- Script para inicializar a funcionalidade de área de transferência e redirecionamento -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/clipboard.js/2.0.14/clipboard.min.js"></script>
<script>
    var clipboardSaldo = new ClipboardJS('#saldo');
    var clipboardTransferir = new ClipboardJS('#transferirBtn', {
        text: function () {
            var destinatario = document.getElementById('destinatario').value;
            var valor = document.getElementById('valor').value;

            // Verifica se o valor é nulo ou vazio
            if (valor != null && valor.trim() !== "") {
                // Garante que o valor seja numérico e maior que zero
                if (!isNaN(valor) && parseFloat(valor) > 0) {
                    return "Transferir R$ " + parseFloat(valor).toLocaleString('pt-BR', { minimumFractionDigits: 2 }) + " para " + destinatario;
                } else {
                    alert("Por favor, insira um valor válido maior que zero.");
                }
            }
        }
    });
</script>
